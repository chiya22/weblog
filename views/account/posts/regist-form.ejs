<!DOCTYPE html>
<html lang="ja">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>新規記事登録</title>
  <%- include("../../_share/stylesheets.ejs") %>

</head>

<body>
  <%- include("../../_share/navbar.ejs") %>

  <main role="main" class="container">

    <div class="border-bottom mt-5 mb-5">
      <h1>新規記事登録</h1>
    </div>
    <form>
      <%
      var errors = locals.errors || {};
      var original = locals.original || {};
      %>
      <% if (locals.errors) { %>
      <div class="alert alert-danger">
        <%  for (let key in errors) { %>
        <div><i class="fa fa-exclamation-circle fa-fw mr-2"></i><%= errors[key] %></div>
        <% } %>
      </div>
      <% }%>
      <div class="form-group row">
        <lable for="url" class="col-sm-2 col-form-lable">
          ＵＲＬ：
        </lable>
        <div class="col-sm-10">
          <input type="text" class="form-control <%= errors.url ? 'is-valid' : '' %>" id="url" name="url"
            value="<%= original.url %>" />
        </div>
      </div>
      <div class="form-group row">
        <lable for="title" class="col-sm-2 col-form-lable">
          タイトル：
        </lable>
        <div class="col-sm-10">
          <input type="text" class="form-control <%= errors.title ? 'is-valid' : '' %>" id="title" name="title"
            value="<%= original.title %>" />
        </div>
      </div>
      <div class="form-group row">
        <lable for="content" class="col-sm-2 col-form-lable">
          本文：
        </lable>
        <div class="col-sm-10">
          <textarea type="text" class="form-control" id="content" name="content"
            rows="6"><%= original.content %></textarea>
        </div>
      </div>
      <div class="form-group row">
        <lable for="keywords" class="col-sm-2 col-form-lable">
          キーワード：
        </lable>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="keywords" name="keywords" value="<%= original.keywords %>" />
        </div>
      </div>
      <div class="form-group row">
        <lable for="authors" class="col-sm-2 col-form-lable">
          著者：
        </lable>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="authors" name="authors" value="<%= original.authors %>" />
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
          <input type="submit" class="btn btn-primary" data-method="POST" data-action="/account/posts/regist/confirm"
            value="確認" />
        </div>
      </div>
    </form>
  </main><!-- /.container -->
  <%- include("../../_share/javascripts.ejs") %>
  <script src="/public/javascripts/account/posts/regist.js"></script>
</body>

</html>